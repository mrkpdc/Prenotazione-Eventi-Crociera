@model List<PrenotazionePageModel>

@{
    ViewData["Title"] = "Prenotazione";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>


<div class="container-fluid">

    <div class="row">
        <div class="col-sm-12" id="resultDivEventi">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Codice Replica</th>
                    <th>Nome Evento</th>
                    <th>Data e ora</th>
                    <th>Nome Locale</th>
                    <th>Luogo</th>
                    <th>Posti disponibili</th>
                    <th>Status</th>
                    <th>Prenota posti</th>
                    <th></th>
                    <th></th>
                </tr>
                    @foreach (PrenotazionePageModel evento in Model)
                    {
                        <tr>
                            <td id="CodReplica">@evento.CodReplica</td>
                            <td>@evento.NomeEvento</td>
                            <td>@evento.DataEOra</td>
                            <td>@evento.NomeLocale</td>
                            <td>@evento.Luogo</td>
                            <td>@evento.Posti</td>
                            @if(@evento.Annullato == true)
                            {
                                <td>Annullato</td>
                            }
                            else
                            {
                                <td>In Programma</td>
                            }
                            <td>
                                <div class="form-group">
                                    <select class="form-control" id="postiDaPrenotare-@evento.CodReplica">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                    </select>
                                </div>
                            </td>
                            @if (@evento.Annullato == true)
                            {
                                <td><button class="btn btn-success" onclick="ajaxCallPrenotazione()" disabled>Prenota</button></td>
                                <td><button class="btn btn-warning" data-toggle="modal" data-target="#Update" disabled>Update</button></td>
                            }
                            else
                            {
                                <td><button class="btn btn-success" onclick="ajaxCallPrenotazione('@evento.CodReplica')">Prenota</button></td>
                                <td><button class="btn btn-warning" data-toggle="modal" data-target="#Update">Update</button></td>
                            }
                        </tr>
                        
